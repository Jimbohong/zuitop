script.
    $(document).ready(function () {
        var currentMenu = '';
        var url = location.pathname;
        switch (url) {
            case '/about.html':
                $("li[value='about']").addClass('active')
                break;
            case '/product.html':
                $("li[value='product']").addClass('active')
                break;
            default:
                $("li[value='index']").addClass('active')
                break;
        }
        $('.menu > li').click(function () {
            console.log($(this)[0].attributes[0].value)
            if(currentMenu === $(this)[0].attributes[0].value){
                $('.sub-menu > ul').hide();
                $('.menu > li').removeClass('active');
                currentMenu = '';
            }else{
                currentMenu = $(this)[0].attributes[0].value;
                console.log(currentMenu);
                switch (currentMenu) {
                case 'index':
                    window.location.href = '/'
                    break;
                case 'about':
                    $('.sub-menu > ul').hide();
                    $('.menu > li').removeClass('active');
                    $(this).addClass('active');
                    $('.sub-02').toggle();
                    break;
                case 'product':
                    $('.sub-menu > ul').hide();
                    $('.menu > li').removeClass('active');
                    $(this).addClass('active');
                    $('.sub-03').toggle();
                    break;
                case 'coop':
                    window.location.href = '/partners.html'
                    $('.sub-menu > ul').hide();
                    $('.menu > li').removeClass('active');
                    $(this).addClass('active');
                    break;
                case 'contact':
                    window.location.href = '/contact.html'
                    $('.sub-menu > ul').hide();
                    $('.menu > li').removeClass('active');
                    $(this).addClass('active');
                    break;
                default:
                    break;
                }
            }})
            }
        );

